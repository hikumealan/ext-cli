{
    "name": "ext-cli",
    "version": "1.0.0",
    "description": "Extend CLIs",
    "main": "index.js",
    "bin": {
        "ext-cli": "./index.js"
    },
    "engines": {
        "node": ">=10.0.0 <15",
        "npm": ">=5.2.0"
    },
    "scripts": {
        "start": "NODE_ENV=production node .",

        "precreate:velocity": "mkdir $npm_config_project && cd $npm_config_project && npm init -y",
        "precreate:angular": "npx @angular/cli new $npm_config_project --prefix=nexus --routing=true --interactive=false --skip-install=true --strict=true",
        "precreate:react": "npx create-react-app $npm_config_project --template typescript --use-npm --skip-install",
        "precreate:vue": "npx @vue/cli create $npm_config_project",
        "precreate:angular-ionic": "npx @ionic/cli start $npm_config_project blank --type=angular --no-deps",
        "precreate:react-ionic": "npx @ionic/cli start $npm_config_project blank --type=react --no-deps",
        "precreate:vue-ionic": "npx @ionic/cli start $npm_config_project blank --type=vue --no-deps",
        "precreate:ionic-angular": "npx @ionic/cli start $npm_config_project blank --type=ionic-angular --no-deps",

        "create:velocity": "git init && git add -A && git commit -m \"initial commit\"",
        "create:angular": "ng add @angular/pwa && npm i @nexus/core @nexus/angular @ngrx/store @ngrx/store-devtools @ngrx/effects @ngrx/router-store @ngrx/entity @ngrx/component-store && npm i @ngrx/schematics --save-dev && ng add @ngrx/router-store",
        "create:react": "npm i @nexus/core @nexus/react rxjs redux",
        "create:vue": "npm i @nexus/core @nexus/vue rxjs vue-rx",
        "create:angular-ionic": "npm i @nexus/core @nexus/angular @ngrx/store @ngrx/store-devtools @ngrx/effects @ngrx/router-store @ngrx/entity @ngrx/component-store && npm i @ngrx/schematics --save-dev",
        "create:react-ionic": "npm i @nexus/core @nexus/react rxjs redux redux-observable",
        "create:vue-ionic": "npm i @nexus/core @nexus/vue vue-rx rxjs",
        "create:ionic-angular": "npm i @nexus/core @nexus/angular",

        "postcreate:velocity": "",
        "postcreate:angular": "ng generate @ngrx/schematics:store State --root --module app.module.ts && ng generate @ngrx/schematics:effect App --root --module app.module.ts",
        "postcreate:react": "",
        "postcreate:vue": "",
        "postcreate:angular-ionic": "",
        "postcreate:react-ionic": "",
        "postcreate:vue-ionic": "",
        "postcreate:ionic-angular": "",

        "npx:template:list": "npx $npm_config_cli template --list",
        "npx:template:info": "npx $npm_config_cli template --info=$npm_config_template",
        "npx:template:get": "npx $npm_config_cli template --get=$npm_config_template",
        "npx:template:get-file": "npx $npm_config_cli template --get-file=$npm_config_template_file",
        "version": "node . --version",
        "version:node": "node --version",
        "version:npm": "npm --version",
        "version:npx": "npx --version",
        "version:angular": "npx @angular/cli --version",
        "version:react": "npx create-react-app --version",
        "version:vue": "npx @vue/cli --version",
        "version:ionic": "npx @ionic/cli --version",
        "prepare": "husky install"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/hikumealan/ext-cli.git"
    },
    "keywords": [
        "key",
        "words"
    ],
    "author": "Bryan.A.Olson",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/hikumealan/ext-cli/issues"
    },
    "homepage": "https://github.com/hikumealan/ext-cli#readme",
    "dependencies": {
        "lodash": "^4.17.21"
    },
    "devDependencies": {
        "husky": "^5.1.3",
        "prettier": "2.2.1"
    }
}
